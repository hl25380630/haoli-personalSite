<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.haoli.personalSite.dao.UserDao">

  	<sql id="CommonQuery">
  		<!-- 精准查询 -->
        <if test="conferenceId != null ">
            and conferenceId=#{conferenceId}
        </if>
        <!-- 模糊查询 -->
		<if test="value != null and value != '' ">
			and value like '%${value}%'
		</if>
		<!-- 按时间段查询 -->
		<if test="startDate != null and startDate != '' ">
            and startDate <![CDATA[>]]> #{orderDate}
        </if>
        <if test="endDate != null and endDate != '' ">
            and endDate <![CDATA[<]]> #{orderDate}
        </if>
    </sql>

    <insert id="batchAdd" parameterType="java.util.Map">
		insert into 
		    t_guest_attribute (
		        conferenceId,
		        guestId,
	 	        attributeId,
	 	        value,
	 	        isEmbeded,
	 		    createTime
	 		)
 		values
 		<foreach collection="list" item="item" index="index" separator=",">
 			(
 			    #{item.conferenceId},
 			    #{item.guestId},
 			    #{item.attributeId},
 			    #{item.value},
 			    #{item.isEmbeded},
 			    #{item.createTime}
 			)
 		</foreach>
	</insert>

	<update id="batchUpdate" parameterType="java.util.Map">
		<foreach collection="list" item="item" index="index" open="" close="" separator=";">
			update 
				t_guest_attribute
		    set
		        value = #{item.value},
		        updateTime = #{item.updateTime}
			where 
			    id = #{item.id}
		</foreach>
	</update>
	
	<select id="batchQuery" parameterType="java.util.Map" resultType="java.util.Map">
	    select
	        id,
	        conferenceId,
	        guestId,
	        attributeId,
	        value,
	        isEmbeded,
	        isChecked
	    from
	        t_guest_attribute
	    where
	        conferenceId=#{conferenceId}
	        <if test="attributeIds.size != 0 ">
				And attributeId IN
				<foreach collection="attributeIds" item="attributeId" index="index" open="(" close=")" separator=",">
					#{attributeId}
				</foreach>
			</if>
	</select>
	
</mapper>